<Window x:Class="AcademyApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AcademyApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="500" FontSize="16">
    <Grid>
        <StackPanel>
            <Label Content="{Binding Text, UpdateSourceTrigger=PropertyChanged}"></Label>
            <TextBox Text="{Binding Text, UpdateSourceTrigger=PropertyChanged}"></TextBox>
            <Button Command="{Binding ButtonCommand}">Click Me</Button>
        </StackPanel>
    </Grid>
</Window>
